.main_chat
  .chat_main__group-info
    .chat_main__group-info__group
      .chat_main__group-info__groupName
        = @group.name
      .chat_main__group-info__memberList
        Members:
        - @group.users.each do |user|
          = user.name
    .chat_main__group-info__editButton
      = link_to edit_group_path(@group), class: "chat_main__group-info__btn" do
        Edit
  
  .chat_main__message-list
    = render @messages

  -# .chat_main__message-list
